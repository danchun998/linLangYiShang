.my-page {
  color: #fff;
  background-color: black;
}

.head {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  background: linear-gradient(160deg, #00ffd5 20%, #008cff 80%);
}

.head-userAvatar {
  margin-top: 50rpx;
  /* border: 1px black solid; */
  display: flex;
  justify-content: center;
}

.userAvatar {
  width: 185rpx;
  height: 185rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 5rpx rgba(168, 168, 168, 0.8) solid;
}

.head-userNickName {
  width: 100%;
  margin-top: 20rpx;
  /* border: 1rpx black solid; */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
}

.head-allowUserInfo {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  margin-left: 10rpx;
  /* background-color: #67C23A; */
}

.body-extend{
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}